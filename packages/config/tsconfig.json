{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src"
  },
  "include": ["src"]
}